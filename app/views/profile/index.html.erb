<%= render "shared/links"%>
<div class="d-flex flex-column justify-content-center align-items-center pt-5">
  <h2 class="page-title"><%= current_user.class %> Profile</h2>
  <div class="bg-light d-flex justify-content-between mb-3 w-50">
    <span>Name: </span>
    <span><%= current_user.name  %> </span>
  </div>
  <div class="bg-light d-flex justify-content-between mb-3 w-50">
    <span>Phone: </span>
    <span><%= current_user.phone  %> </span>
  </div>

  <% if current_user.doctor? %>
    <div class="bg-light d-flex justify-content-between mb-3 w-50">
      <span>Category: </span>
      <span><%= current_user.category.name  %> </span>
    </div>
  <% end %>

  <div class="d-flex justify-content-between mb-3 w-50">
    <%= link_to "Create an Appointment", new_appointment_path,  class: "btn btn-sm btn-primary rounded-pill" %>
    <%= link_to "View Doctors", patient_doctors_path(current_user),  class: "btn btn-sm btn-primary rounded-pill" %>
    <% if current_user.appointments.present?%>
      <%= link_to "View Appointments", patient_appointments_path(current_user),  class: "btn btn-sm btn-primary rounded-pill" %>
    <% else %>
      <span>You don't have any appointments yet</span>
    <% end %>
  </div>
</div>


