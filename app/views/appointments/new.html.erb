<%= render "shared/links"%>
<%= form_with model: @appointment do |f| %>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <h2 class="page-title">Appointment to Doctor</h2>
    <div class="bg-light d-flex justify-content-between mb-3 w-50">
      <span>Patient: <%= current_user.name  %></span>
    </div>
    <div class="form-group mb-3 w-50">
      <%= f.label :doctor, class: "form-label" %>
      <%= f.select :doctor_id, @doctors_list.collect { |d| [ "#{d.name} #{d.category.name}", d.id ] }, include_blank: true, class:"form-control"  %>
    </div>
    <div class="mb-3 d-flex align-items-center justify-content-center">
      <%= f.submit "Create an appointment", class:"btn btn-sm btn-primary rounded-pill" %>
    </div>
  </div>
<% end %>
